{
    "telemetry.telemetryLevel": "off",
    // "editor.fontFamily": "'IBM Plex Mono', 'Courier New', monospace",
    "editor.fontFamily": "'Berkeley Mono', 'Courier New', monospace",
    "editor.fontSize": 18,
    "debug.console.fontFamily": "'Berkeley Mono', 'Courier New', monospace",
    "debug.console.fontSize": 20,
    "debug.console.lineHeight": 30,
    "terminal.integrated.fontSize": 19,
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "git.enabled": false,
    "files.hotExit": "off",
    "window.restoreWindows": "none",
    "workbench.startupEditor": "none",
    "editor.minimap.renderCharacters": false, 
    "explorer.copyRelativePathSeparator": "/",
    "workbench.colorCustomizations": {
        // "editor.background": "#1a1e24",
        "[Flexoki Dark]": {
            "quickInput.background": "#1e1c1c",
            "quickInputList.focusBackground": "#1c4f4a",
            "quickInputList.focusForeground": "#ffffff",
            // "sideBar.background": "#181818",
            // "activityBar.background": "#181818", 
            // "sideBar.border": "#2b2b2b", 
            "sideBar.background": "#100F0F",
            // "activityBar.border": "#363636",
            // "panel.background": "#100F0F",
            // "editor.selectionBackground": "#dcdc5a"
            // "[Mariana Pro (Cool)]": {
            // }
            "panel.border": "#3f3f3f",
        },
        "editor.lineHighlightBackground": "#000000",
        "editor.lineHighlightBorder": "#262626",
        // "editorCursor.foreground": "#1cff8e",
        "editorCursor.background": "#FFFFFF"
        // "terminalCursor.foreground": "#1cff8e", 
         
    },
    "editor.occurrencesHighlight": "off", 
    "editor.cursorStyle": "block",
    "workbench.colorTheme": "GitHub Dark Dimmed",
    "explorer.confirmDragAndDrop": false,
    "editor.dragAndDrop": false,
    "explorer.confirmDelete": false,
    "security.workspace.trust.untrustedFiles": "open",
    "terminal.integrated.profiles.windows": {

        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
        "Command Prompt": {
            "path": "${env:windir}\\System32\\cmd.exe",
            "icon": "terminal-cmd"
        },
        "Git Bash": {
            "source": "Git Bash"
        }
    },
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "editor.bracketPairColorization.enabled": false,
    "editor.cursorSmoothCaretAnimation": "on",
    // "workbench.iconTheme": "Monokai Pro Icons",
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "comment", 
                "settings": {
                    "fontStyle": ""
                }
            }
        ],
        "[Monokai Pro (Filter Ristretto)]": {
            "textMateRules": [
                {
                    "scope": "punctuation", 
                    "settings": {
                        "foreground": "#c2bbbb",
                        // "fontStyle": "bold"
                    }
                }, 
                {
                    "scope": "meta.brace.square", 
                    "settings": {
                        "foreground": "#c2bbbb",
                        // "fontStyle": "bold"
                    }
                }, 
                {
                    "scope": "meta.brace.round", 
                    "settings": {
                        "foreground": "#c2bbbb",
                        // "fontStyle": "bold"
                    }
                }, 
                {
                    "scope": "meta.function-call", 
                    "settings": {
                        "fontStyle": "bold"
                    }
                }
            ], 
            "comments": "#8ca0a0"
        }
    },
    // "editor.stickyScroll.enabled": true, 
    "[c]": {
        "editor.formatOnSave": true, 
        // "editor.stickyScroll.enabled": true
    }, 
    "[cpp]": {
        "editor.formatOnSave": true,
        // "editor.stickyScroll.enabled":true
    },
    "[typescript]": {
        "editor.formatOnSave": true,
        // "editor.stickyScroll.enabled":true, 
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff", 
        "editor.stickyScroll.enabled": true
    },
    "[go]": {
        // "editor.stickyScroll.enabled":true
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode", 
        "editor.formatOnSave": true,
        "editor.tabSize": 2
      },
    "black-formatter.args": ["--line-length", "100"],
    "C_Cpp.clang_format_fallbackStyle": "{BasedOnStyle: Google, AlignConsecutiveAssignments: true, AlignConsecutiveDeclarations : true, IndentWidth: 4, PointerAlignment: Right, AllowShortBlocksOnASingleLine: false, AllowShortFunctionsOnASingleLine: None, ColumnLimit: 0, DerivePointerAlignment: false, AllowShortEnumsOnASingleLine: true}",
    "C_Cpp.clang_format_style": "{BasedOnStyle: Google, AlignConsecutiveAssignments: false, AlignConsecutiveDeclarations : true, IndentWidth: 4, PointerAlignment: Right, AllowShortBlocksOnASingleLine: false, AllowShortFunctionsOnASingleLine: None, ColumnLimit: 0, DerivePointerAlignment: false, AllowShortEnumsOnASingleLine: true}", 
    "editor.semanticHighlighting.enabled": false,
    "workbench.editor.showTabs": "multiple",
    "C_Cpp.enhancedColorization": "disabled",
    "window.commandCenter": false,
    "files.associations": {
        "*.tmpl": "html"
    },
    "notebook.markup.fontSize": 18,
    "cmake.configureOnOpen": false
}

