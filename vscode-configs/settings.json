{
    "telemetry.telemetryLevel": "off",
    "quarto.mathjax.theme": "dark",
    "editor.fontFamily": "'Berkeley Mono', 'Courier New', monospace",
    "editor.fontSize": 19,
    "debug.console.fontSize": 16,
    "terminal.integrated.fontSize": 19,
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "quarto.render.previewType": "external",
    "git.enabled": false,
    "files.hotExit": "off",
    "window.restoreWindows": "none",
    "workbench.startupEditor": "none",
    "editor.minimap.renderCharacters": false, 
    "workbench.colorCustomizations": {
        "editor.lineHighlightBackground": "#000000",
        "editor.lineHighlightBorder": "#262626",
        "editorCursor.foreground": "#1cff8e",
        "terminalCursor.foreground": "#1cff8e", 
        // "editor.selectionBackground": "#dcdc5a"
        // "[Mariana Pro (Cool)]": {
        // }
        
    },
    "editor.occurrencesHighlight": false, 
    "editor.cursorStyle": "line",
    "workbench.colorTheme": "Tomorrow Night",
    "explorer.confirmDragAndDrop": false,
    "editor.dragAndDrop": false,
    "explorer.confirmDelete": false,
    "security.workspace.trust.untrustedFiles": "open",
    "terminal.integrated.profiles.windows": {

        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell"
        },
        "Command Prompt": {
            "path": "${env:windir}\\System32\\cmd.exe",
            "icon": "terminal-cmd"
        },
        "Git Bash": {
            "source": "Git Bash"
        }
    },
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "editor.bracketPairColorization.enabled": false,
    "editor.cursorSmoothCaretAnimation": "off",
    "workbench.iconTheme": "Monokai Pro Icons",
    "editor.tokenColorCustomizations": {
        "[Monokai Pro (Filter Ristretto)]": {
            "textMateRules": [
                {
                    "scope": "punctuation", 
                    "settings": {
                        "foreground": "#c2bbbb",
                        // "fontStyle": "bold"
                    }
                }, 
                {
                    "scope": "meta.brace.square", 
                    "settings": {
                        "foreground": "#c2bbbb",
                        // "fontStyle": "bold"
                    }
                }, 
                {
                    "scope": "meta.brace.round", 
                    "settings": {
                        "foreground": "#c2bbbb",
                        // "fontStyle": "bold"
                    }
                }
            ], 
            "comments": "#8ca0a0"
        }
    },
    // "editor.stickyScroll.enabled": true, 
    "[c]": {
        "editor.formatOnSave": true, 
        "editor.stickyScroll.enabled": true
    }, 
    "[cpp]": {
        "editor.formatOnSave": true,
        "editor.stickyScroll.enabled":true
    },
    "[typescript]": {
        "editor.formatOnSave": true,
        "editor.stickyScroll.enabled":true
    },
    "[python]": {
        "editor.formatOnSave": true,
        "editor.stickyScroll.enabled":true
    },
    "C_Cpp.clang_format_fallbackStyle": "{BasedOnStyle: Google, AlignConsecutiveAssignments: true, AlignConsecutiveDeclarations : true, IndentWidth: 4, PointerAlignment: Right, AllowShortBlocksOnASingleLine: false, AllowShortFunctionsOnASingleLine: None, ColumnLimit: 0, DerivePointerAlignment: false}",
    "C_Cpp.clang_format_style": "{BasedOnStyle: Google, AlignConsecutiveAssignments: false, AlignConsecutiveDeclarations : true, IndentWidth: 4, PointerAlignment: Right, AllowShortBlocksOnASingleLine: false, AllowShortFunctionsOnASingleLine: None, ColumnLimit: 0, DerivePointerAlignment: false}", 
    "editor.semanticHighlighting.enabled": false,
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "C:/Users/emanuel/AppData/Local/Programs/Python/Python311/Scripts/black.exe", 
    "python.formatting.blackArgs": ["--line-length", "100"], 
    "workbench.editor.showTabs": false,
    "C_Cpp.enhancedColorization": "disabled"

}

